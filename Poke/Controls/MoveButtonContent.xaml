<UserControl x:Class="Poke.MoveButtonContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Poke"
             Background="#B7FFFFFF">
    <StackPanel>
        <Label Content="{Binding Name}"/>
        <DockPanel>
            <TextBlock DockPanel.Dock="Right"
                       Margin="5,0">
                <Run Text="{Binding PPLeft}"/> / <Run Text="{Binding PP, Mode=OneWay}"/>
            </TextBlock>
            <Label Content="{Binding Type}"
                   FontSize="10"
                   Margin="3"
                   Padding="2"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   Background="{Binding Type, Converter={StaticResource TypeToColorConverter}}"/>
        </DockPanel>
    </StackPanel>
    <UserControl.ToolTip>
        <local:MoveInfoControl Width="200"/>
    </UserControl.ToolTip>
</UserControl>
