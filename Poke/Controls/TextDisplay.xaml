<UserControl x:Class="Poke.TextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Margin="10"
            Padding="15"
            Background="#1976d2"
            CornerRadius="15">
        <DockPanel>
            <Border DockPanel.Dock="Right"
                    BorderBrush="White"
                    BorderThickness="1"
                    Padding="10,5"
                    Margin="0,-8"
                    CornerRadius="20"
                    VerticalAlignment="Center">
                <TextBlock Text="A"
                           Foreground="White"/>
            </Border>
            <TextBlock Text="{Binding Status}"
                       Foreground="White"
                       TextWrapping="Wrap"/>
        </DockPanel>
    </Border>
</UserControl>
