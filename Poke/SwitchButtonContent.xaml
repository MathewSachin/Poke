<UserControl x:Class="Poke.SwitchButtonContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Poke"
             Background="#B7FFFFFF">
    <Grid Background="{Binding Stats.CurrentHP, Converter={StaticResource FaintedToColorConverter}}">
        <StackPanel Margin="4">
            <TextBlock Text="{Binding Name}"
                       Margin="0,0,0,2"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding PrimaryType}"
                       FontSize="10"
                       Padding="2"
                       Foreground="White"
                       Background="{Binding PrimaryType, Converter={StaticResource TypeToColorConverter}}"/>
                <Label Content="{Binding SecondaryType}"
                       FontSize="10"
                       Padding="2"
                       Foreground="White"
                       Background="{Binding SecondaryType, Converter={StaticResource TypeToColorConverter}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
    <UserControl.ToolTip>
        <local:PokemonTooltip/>
    </UserControl.ToolTip>
</UserControl>
