<Page x:Class="Poke.DexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Dex">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top"
                   Background="{StaticResource Accent}"
                   Margin="0,0,0,20">
            <TextBlock Text="Dex"
                       Margin="10"
                       VerticalAlignment="Center"
                       Foreground="White"
                       Style="{StaticResource Heading1}"/>
        </DockPanel>

        <StackPanel>
            <Button Content="Pokemons"
                    Click="GoToPokemonList"
                    Margin="5"/>
            <Button Content="Natures"
                    Click="GoToNatures"
                    Margin="5"/>
            <Button Content="Abilities"
                    Click="GoToAbilities"
                    Margin="5"/>
            <Button Content="Moves"
                    Click="GoToMoves"
                    Margin="5"/>
            <Button Content="Type Effectiveness"
                    Click="GoToTypeEffectiveness"
                    Margin="5"/>
        </StackPanel>
    </DockPanel>
</Page>
